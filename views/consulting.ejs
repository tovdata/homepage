      <!-- Footer -->
      <%- include('./common/footer')%>
    </section>

    <!-- Animate JS -->
    <script type="text/javascript" src="javascripts/animate.js"></script>
    <!-- Script -->
    <script>
      // Current modal type
      let currentModalType = 'documentation';

      // Show modal
      function showModal(type) {
        // Set current modal type
        currentModalType = type;
        // Set modal UI
        document.querySelector(`.modal[data-type="${type}"]`).classList.remove('hidden');
        document.querySelector('.modal-background').classList.remove('hidden');
        document.querySelector('body').classList.add('overflow-y-hidden');
      }

      // Close modal
      function closeModal() {
        document.querySelector(`.modal[data-type="${currentModalType}"]`).classList.add('hidden');
        document.querySelector('.modal-background').classList.add('hidden');
        document.querySelector('.modal-background').classList.add('hidden');
        document.querySelector('body').classList.remove('overflow-y-hidden');
      }
    </script>
  </body>
