  <!-- Script -->
  <script>
    // Current modal type
    let currentModalType = 'documentation';
    let currentMode;
    let selectMenu = 0;
    const DESKTOP_SIZE = 1024;

    $(document).ready(function () {
      windowResize();
      $(window).resize(windowResize);
      consultingMenuClickEvent();
    })

    // Close the modal when click or touch outside the modal
    $(document).bind("mouseup touchend", function (e) {
      const modal = $(".modal");
      if (modal.has(e.target).length === 0) {
        closeModal();
      }
    })

    function consultingMenuClickEvent() {
      $(".consulting-menu-item").click(function () {
        addConsultingContent($(this));
      })
    }

    function activeControl(div) {
      $(".consulting-menu-item").removeClass('active');
      div.addClass('active');
      $(".consulting-content>div").removeClass('active');
      $(".consulting-content>div").eq(div.attr('data-index')).addClass('active');
      selectMenu = div.attr('data-index');
    }

    function addConsultingContent(div) {
      var width = window.innerWidth;
      if (width < DESKTOP_SIZE) {
        const content = $(".consulting-content");
        // content.slideUp();
        content.slideUp(400, function () {
          div.after(content);
          content.slideDown('slow');
          // 함수로 수정
          activeControl(div);
        });
      } else {
        activeControl(div);
        $(".consulting-content").hide();
        $(".consulting-content").fadeIn();
        const content = $(".consulting-content").detach();
        $(".consulting-menu").after(content);
      }
    }


    // When the window size is changed
    function windowResize() {
      var width = window.innerWidth;
      let mode;
      if (width < DESKTOP_SIZE) {
        mode = 'TABLET';
      } else {
        mode = 'DESKTOP';
      }
      if (currentMode === undefined || currentMode !== mode) {
        addConsultingContent($(`.consulting-menu-item[data-index=${selectMenu}]`));
        currentMode = mode;
        if (currentMode === "TABLET") {
          $('#img-question').attr('src', 'images/consulting/question-mobile.png');
          $('#div-question').css('padding-left', '2rem');
          $('#div-question').css('padding-right', '2rem');
        } else {
          $('#img-question').attr('src', 'images/consulting/question.png');
          $('#div-question').css('padding-left', '7.5rem');
          $('#div-question').css('padding-right', '7.5rem');
        }
      }
    }

    // Show modal
    function showModal(type) {
      // Set current modal type
      currentModalType = type;
      // Set modal UI
      document.querySelector(`.modal[data-type="${type}"]`).classList.remove('hidden');
      document.querySelector('.modal-background').classList.remove('hidden');
      document.querySelector('body').classList.add('overflow-y-hidden');
    }

    // Close modal
    function closeModal() {
      document.querySelector(`.modal[data-type="${currentModalType}"]`).classList.add('hidden');
      document.querySelector('.modal-background').classList.add('hidden');
      document.querySelector('.modal-background').classList.add('hidden');
      document.querySelector('body').classList.remove('overflow-y-hidden');
    }

    function stateReady() {
      alert("상담신청 준비중입니다");
    }
  </script>
