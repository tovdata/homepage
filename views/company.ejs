      }
      .tov-member-image > img {
        cursor: grab;
        filter: grayscale(100%);
        transition: all 0.3s;
      }
      .tov-member-image > img:hover {
        filter: grayscale(0%);
        transform: scale(1.05);
      }

      .tov-history {
        flex: 1;
        user-select: none;
      }
      .tov-history-row {
        display: flex;
        position: relative;
      }
      .tov-history-row-left,
      .tov-history-row-right {
        display: flex;
        flex: 50%;
        width: 50%;
      }
      .tov-history-content {
        padding-top: 0.125rem;
      }
      .tov-history-row-left {
        flex-direction: row-reverse;
        padding-right: 1.5rem;
      }
      .tov-history-row-left > .tov-history-content {
        text-align: right;
      }
      .tov-history-row-left > h5 + .tov-history-content {
        margin-right: 1rem;
      }
      .tov-history-row-right {
        padding-left: 1.5rem;
      }
      .tov-history-row-right > .tov-history-content {
        text-align: left;
      }
      .tov-history-row-right > h5 + .tov-history-content {
        margin-left: 1rem;
      }
      .tov-history-flow {
        align-items: center;
        display: flex;
        flex-direction: column;
        padding-top: 0.25rem;
        position: relative;
      }
      .tov-history-flow-bar {
        border-color: #5B87E0;
        border-left-width: 3px;
        height: calc(100% - 1.375rem);
        margin-right: 1.5px;
        margin-top: 0.25rem;
        min-height: 2.75rem;
      }
      .tov-history-flow-circle {
        border-color: #5B87E0;
        border-radius: 50%;
