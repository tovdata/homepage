  <script>
    let activeIndex = 2;
    const banner_num = 4;
    let interval;
    // Go news
    function goNews() {
      window.open('https://page.stibee.com/subscriptions/128813', '_blank');
    }
    $(document).ready(function () {
      interval = setInterval(changeActiveIndex, 20000 / banner_num);
      $('.indicator-item').on('click', function () {
        const index = $(this).attr('data-index');
        activeIndex = parseInt(index);
        changeActiveIndex();
        $('.tov-banner').css('animation', 'none');
        $('.tov-banner').animate({
          marginLeft: `${-100*(index-1)}%`
        }, 1, function () {
          // setTimeout(function () {
          //   clearInterval(interval);
          //   interval = setInterval(changeActiveIndex, 20000 / banner_num);
          //   $('.tov-banner').css('animation', `slide${index} 20s infinite`);
          // }, 1000);
          setTimeout(function () {
            $('.tov-banner').css('animation', `slide${index} 20s infinite`);
          }, 1000)
          clearInterval(interval);
          interval = setInterval(changeActiveIndex, 20000 / banner_num);
        });
      })
    })
    // Load the IFrame Player API code asynchronously.
    var tag = document.createElement('script');
    tag.src = "https://www.youtube.com/player_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    // Replace the 'player' element with an <iframe> and
    // YouTube player after the API code downloads.
    var player;

    function onYouTubePlayerAPIReady() {
      player = new YT.Player('player', {
        // events: {
        //   'onReady': function(event) {
        //     event.target.playVideo();
        //   }
        // },
        videoId: 'hWil2OMM6vk'
      });
    }

    function changeActiveIndex() {
      if (activeIndex > banner_num - 1) {
        activeIndex %= banner_num;
      }
      if (activeIndex == 0) activeIndex = 4;
      changeActiveBtn();
      activeIndex += 1;
    }

    function changeActiveBtn() {
      $('.indicator-item').removeClass('active');
      $(`.indicator-item[data-index=${activeIndex}]`).addClass('active');
    }
  </script>
